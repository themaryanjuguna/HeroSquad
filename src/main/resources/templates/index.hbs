{{#partial "content"}}

    <div class="container col-xl-10 col-xxl-8 px-4 py-5">
        <div class="row align-items-center g-lg-5 py-5">
            <div class="col-lg-7 text-center text-lg-start">
                <h1 class="display-4 fw-bold lh-1 mb-3">Add Your Hero</h1>
                <p class="col-lg-10 fs-4">Below is an example form built entirely with Bootstrapâ€™s form controls. Each required form group has a validation state that can be triggered by attempting to submit the form without completing it.
                </p>
            </div>
            <div class="col-md-10 mx-auto col-lg-5">
                <form action="/heroes/new" method="post" class="p-4 p-md-5 border rounded-3 bg-light">
                    <div class="form-floating mb-3">
                        <input type="text" id="name floatingInput" class="form-control" name="name" placeholder="Write Heroes Name">
                        <label for="floatingInput">Enter Heroes Name</label>
                    </div>
                    <div class="form-floating mb-3">
                        <input type="date" class="dob form-control" name="dob" id="dob floatingInput" placeholder="Date of Birth">
                        <label for="floatingInput">Date of Birth</label>
                    </div>
                    <div class="form-floating mb-3">
                        <input type="text" id="strength floatingInput" class="strength form-control" name="strength" placeholder="Heroes Strength">
                        <label for="floatingInput">Heroes Strength</label>
                    </div>
                    <div class="form-floating mb-3">
                        <input type="text" id="weakness floatingInput" class="weakness form-control" name="weakness" placeholder="Heroes Weakness">
                        <label for="floatingInput">Heroes Weakness</label>
                    </div>
                    <button class="w-100 btn btn-lg btn-primary" type="submit">ADD HERO</button>
                </form>
            </div>
        </div>
    </div>

    <div class="b-example-divider"></div>

    <section id="herolist">
    <div class="container col-xl-10 col-xxl-8 px-4 py-5">
        <div class="row align-items-center g-lg-5 py-5">
            <div class="col-lg text-center text-lg-start">
                <h1 class="display-4 fw-bold lh-1 mb-3">Hero List</h1>


                {{#if heroes}} <!--if heroes exist, then -->
                    <table class="table">
                        <thead>
                        <tr>
                            <th scope="col">No.</th>
                            <th scope="col">Heroes Name</th>
                            <th scope="col">Age</th>
                            <th scope="col">Strength</th>
                            <th scope="col">Weakness</th>
                        </tr>
                        </thead>
                        <tbody>
                        {{#each heroes }} <!--loop-->
                        <tr>
                        <td scope="row">1</td>
                        <td scope="row">{{ name }}</td><!--show-->
                        <td scope="row">{{ age }}</td>
                        <td scope="row">{{ strength }}</td>
                        <td scope="row">{{ weakness }}</td>{{/each}}
                        </tr>

                            </tbody>
                            </table>

                 {{else}} <!--no heroes!-->
                    <tr scope="row">No Heroes to show at the moment</tr>
                 {{/if}}

            </div>
        </div>
    </div>
    </section>

    <div class="b-example-divider"></div>

{{/partial}}

{{> layout.hbs}}